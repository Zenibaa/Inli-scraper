{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package",
    "runCommand": "java -jar target/inli-scraper-*.jar"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "java -jar target/inli-scraper-*.jar",
    "healthcheckPath": "/",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
